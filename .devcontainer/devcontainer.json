{
  "name": "Tankalizer DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "workspaceFolder": "/app",
  "mounts": [
    // ローカルのワークスペースフォルダをコンテナの/appにマウント
    "source=${localWorkspaceFolder},target=/app,type=bind",
    // node_modulesとnextフォルダを除外
    "source=tankaLizer-frontend-node_modules,target=/app/frontend/node_modules,type=volume",
    "source=tankalizer-frontend-next,target=/app/frontend/.next,type=volume",
    "source=tankalizer-backend-node_modules,target=/app/backend/node_modules,type=volume"
  ],
  "containerEnv": {
    "NODE_ENV": "development",
    "TZ": "Asia/Tokyo",
    "BACKEND_URL": "http://localhost:8080",
    "WATCHPACK_POLLING": "true",
    "CHOKIDAR_USEPOLLING": "true"
  },
  "runArgs": [
    "--name=Tankalizer",
    "--env-file=${localWorkspaceFolder}/frontend/.env",
    "--env-file=${localWorkspaceFolder}/backend/.env"
  ],
  "forwardPorts": [3000, 8080],
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "christian-kohler.path-intellisense",
        "christian-kohler.npm-intellisense"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "eslint.alwaysShowStatus": true,
        "terminal.integrated.shell.linux": "/bin/bash",
        "tasks": {
          "version": "2.0.0",
          "tasks": [
            {
              "label": "frontend",
              "type": "shell",
              "command": "unset PORT && npm install && npm run dev",
              "options": { "cwd": "${workspaceFolder}/frontend" },
              "presentation": {
                "group": "group"
              },
              "runOptions": {
                "runOn": "folderOpen"
              }
            },
            {
              "label": "backend",
              "type": "shell",
              "command": "npm install && npm run dev",
              "options": { "cwd": "${workspaceFolder}/backend" },
              "presentation": {
                "group": "group"
              },
              "runOptions": {
                "runOn": "folderOpen"
              }
            }
          ]
        }
      }
    }
  }
}
